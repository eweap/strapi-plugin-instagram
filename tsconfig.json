{
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es2015", // or es2015 ?
        "module": "CommonJS",
        "typeRoots": ["node_modules/@types", "typings"],
        "lib": ["es2017", "DOM"],
        "strictNullChecks": true,
        "noImplicitAny": true
    },
    "exclude": ["node_modules", "**/tsconfig.json"]
}
