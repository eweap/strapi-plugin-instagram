{
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "target": "es2015",
        "module": "CommonJS",
        "typeRoots": ["node_modules/@types", "src/typings"],
        "lib": ["es2017", "DOM"],
        "strictNullChecks": true,
        "noImplicitAny": true
    }
}
